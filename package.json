{
  "name": "grovemonitor",
  "version": "0.1.0",
  "description": "Unified observability platform for Grove Platform services",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:collector": "pnpm --filter collector dev",
    "dev:api": "pnpm --filter api dev",
    "dev:dashboard": "pnpm --filter dashboard dev",
    "build": "pnpm -r build",
    "deploy:collector": "pnpm --filter collector deploy",
    "deploy:api": "pnpm --filter api deploy",
    "deploy:dashboard": "pnpm --filter dashboard deploy",
    "deploy:all": "pnpm deploy:collector && pnpm deploy:api && pnpm deploy:dashboard",
    "db:migrate": "wrangler d1 execute grove-monitor-db --file=./migrations/001_initial_schema.sql && wrangler d1 execute grove-monitor-db --file=./migrations/002_alerts_config.sql",
    "logs:collector": "wrangler tail grove-monitor-collector",
    "logs:api": "wrangler tail grove-monitor-api",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,svelte,json,md}\""
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.93.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
